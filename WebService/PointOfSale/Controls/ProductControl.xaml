<UserControl x:Class="PointOfSale.Controls.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.Controls"
             mc:Ignorable="d" 
             Width="300" Height="100">
    <Grid HorizontalAlignment="Left">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
        </Grid.RowDefinitions>

        <Image Width="100" Height="100" Grid.RowSpan="5"/>

        <TextBlock Grid.Column="2" Grid.Row="0" FontWeight="Bold" Text="Name" />
        <TextBlock Grid.Column="2" Grid.Row="1" Text="$ PRICE" />
        <TextBlock Grid.Column="2" Grid.Row="2" Grid.RowSpan="3" Text="My super duper description... heheh eh ehf daf dashf dkjsahf jdksahjfkda"  TextWrapping="Wrap"/>
    </Grid>
</UserControl>
